%%-*- mode:erlang -*-
{erl_opts, [debug_info]}.
{deps, [{jiffy, "1.0.1"},
        {base64url, "1.0.1"}]}.
{overrides,
 [{override, jiffy,
   [{plugins, [{pc, "1.10.0"}]},
